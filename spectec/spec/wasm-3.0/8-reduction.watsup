  -- if cj_2* = $narrow($lsize(imm_1), $lsize(imm_2), sx, ci_2)*
  -- if c = $invlanes_(imm_2 X N_2, cj_1* cj_2*)


rule Step_pure/vcvtop-normal:
  (VCONST V128 c_1) (VCVTOP (lnn_2 X N_2) vcvtop eps (lnn_1 X N_1) sx) ~> (VCONST V128 c)
