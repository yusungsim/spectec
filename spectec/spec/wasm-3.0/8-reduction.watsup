  -- if c = $invlanes_(pnn X N, c'*[$(i*[k])]^(k<N))


rule Step_pure/vsplat:
  (CONST $lunpack(lnn) c_1) (VSPLAT (lnn X N)) ~> (VCONST V128 c)
